<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.menu.TransLongText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_trans_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Chinese"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/menu_trans_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_trans_change"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/menu_trans_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="English"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/menu_trans_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter your text here."
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="start"
            android:background="@drawable/main_search_edit"/>

        <ImageView
            android:id="@+id/menu_trans_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_trans_clear"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/menu_trans_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_trans_go"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|bottom"
            android:visibility="gone"/>
    </FrameLayout>
    <TextView
        android:id="@+id/menu_trans_answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:layout_margin="10dp"
        android:background="@drawable/main_search_edit"/>
</LinearLayout>
